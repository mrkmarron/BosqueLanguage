{
    "name": "bosque-language-tools",
    "displayName": "Bosque Language Tools",
    "description": "IDE support for the Bosque programming language",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.32.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onCommand:extension.typecheck"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "bosque",
                "aliases": [
                    "Bosque",
                    "bosque"
                ],
                "extensions": [
                    ".bsq"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "bosque",
                "scopeName": "source.bsq",
                "path": "./syntaxes/bosque.tmLanguage.json"
            }
        ],
        "commands": [
            {
                "command": "extension.typecheck",
                "title": "TypeCheck"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./"
    },
    "devDependencies": {
        "@types/node": ">10.0.0",
        "@types/vscode": "^1.32.0"
    }
}
